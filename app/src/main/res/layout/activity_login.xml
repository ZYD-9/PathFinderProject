<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:id="@+id/header_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/payo_primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:fontFamily="@font/montserratbold"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="40sp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/montserratsemibold"
        android:text="@string/already"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/here"
        android:layout_below="@+id/already"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/loginnow"
        android:fontFamily="@font/montserratsemibold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/login_fields"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

 <androidx.cardview.widget.CardView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:cardBackgroundColor="@color/payo_secondary"
     app:cardCornerRadius="15dp"
     android:layout_margin="20dp">

     <EditText
         android:id="@+id/gmail_in"
         android:layout_marginHorizontal="10dp"
         android:textAlignment="textStart"
         android:layout_width="230dp"
         android:layout_height="wrap_content"
         android:hint="test@gmail.com"
         android:fontFamily="@font/montserratmedium"

         />
 </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/payo_secondary"
            app:cardCornerRadius="15dp"
            android:layout_margin="20dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/password_in"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="textStart"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:hint="password"
                android:fontFamily="@font/montserratmedium"

                />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_fields"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:fontFamily="@font/montserratsemibold"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        />

    <ProgressBar
        android:id="@+id/login_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>