<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <androidx.cardview.widget.CardView
        android:id="@+id/register_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:cardBackgroundColor="@color/payo_primary"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="Register"
            android:fontFamily="@font/montserratbold"
            android:textSize="40sp"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/create_prompt"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new Account here!"
        android:textSize="20sp"
        android:fontFamily="@font/montserratsemibold"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/register_fields"
        android:layout_below="@id/create_prompt"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/payo_secondary"
            android:layout_margin="15dp"
            app:cardCornerRadius="15dp"
            >

        <EditText
            android:id="@+id/username_field"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_width="230dp"
            android:hint="Username "
            android:fontFamily="@font/montserratmedium"
            android:layout_marginHorizontal="10dp"
            />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/payo_secondary"
            android:layout_margin="15dp"
            app:cardCornerRadius="15dp"
            >

            <EditText
                android:id="@+id/new_email_field"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_width="230dp"
                android:hint="email"
                android:fontFamily="@font/montserratmedium"
                android:layout_marginHorizontal="10dp"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/payo_secondary"
            android:layout_margin="15dp"
            app:cardCornerRadius="15dp"
            >

            <EditText
                android:id="@+id/new_password_field"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_width="230dp"
                android:hint="password"
                android:fontFamily="@font/montserratmedium"
                android:layout_marginHorizontal="10dp"
                />

        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_fields"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:fontFamily="@font/montserratsemibold"
        android:textSize="25sp"
        android:background="@drawable/roundbtn"
        />
<ProgressBar
    android:id="@+id/registration_progress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:visibility="gone"/>


</RelativeLayout>