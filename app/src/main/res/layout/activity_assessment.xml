<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/payo_primary"
    tools:context=".Assessment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="-60dp"
            android:layout_marginRight="-30dp"
            android:background="@drawable/wave2" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/signupbtn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_baseline_menu_24" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Novem"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle"
        android:layout_marginTop="95dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:id="@id/assessmenttext_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/assessment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASSESSMENT"
            android:fontFamily="@font/arial_geobold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/assessment_fields"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/assessmenttext_holder"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            app:cardCornerRadius="10dp"
            android:foreground="@drawable/edittext_stroke"
            android:layout_gravity="center"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indicator:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginVertical="10dp"
                    android:textSize="14dp"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1- Strongly Disagree"
                            android:fontFamily="@font/arial_regular"
                            android:textSize="12dp"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2- Disagree"
                            android:textSize="12dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4- Agree"
                            android:textSize="12dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5- Strongly Agree"
                            android:textSize="12dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/assessment_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assessment_fields"
        android:layout_marginHorizontal="20dp"
        android:foreground="@drawable/edittext_stroke"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        app:cardElevation="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/assessment_questionnaire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="8dp" />
    </androidx.cardview.widget.CardView>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitbtn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/assessment_holder"
        android:background="@drawable/roundbtn"
        android:text="Submit"
        android:fontFamily="@font/arial_geobold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12dp" />


</RelativeLayout>