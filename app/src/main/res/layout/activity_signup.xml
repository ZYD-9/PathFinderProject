<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/payo_primary"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/wave1" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/signupbtn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_baseline_arrow_back_24" />

    <LinearLayout
        android:id="@+id/logontxt_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/tracklogo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sign Up"
            android:textStyle="bold"
            android:fontFamily="@font/arial_geobold"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_marginTop="45dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_fields"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logontxt_holder"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:text="Username:"
            android:fontFamily="@font/arial_regular"
            android:textSize="12dp"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:foreground="@drawable/edittext_stroke">

            <EditText
                android:id="@+id/username_in"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="textStart"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="5dp"
            android:text="First Name:"
            android:fontFamily="@font/arial_regular"
            android:textSize="12dp"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:foreground="@drawable/edittext_stroke">

            <EditText
                android:id="@+id/firstname_in"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="textStart"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="5dp"
            android:text="Last Name:"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:fontFamily="@font/arial_regular"/>

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:foreground="@drawable/edittext_stroke">

            <EditText
                android:id="@+id/lastname_in"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="textStart"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="5dp"
            android:text="Email:"
            android:textSize="12dp"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:foreground="@drawable/edittext_stroke">

            <EditText
                android:id="@+id/email_in"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="textStart"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="5dp"
            android:text="Password:"
            android:textSize="12dp"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center"
            android:foreground="@drawable/edittext_stroke">

            <EditText
                android:id="@+id/password_in"
                android:layout_marginHorizontal="5dp"
                android:textAlignment="textStart"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>

        <CheckBox
            android:id="@+id/terms_and_condition"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="80dp"
            android:text="@string/accept_terms_condition"
            android:layout_marginTop="5dp"
            android:buttonTint="@color/black"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signedup_btn"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signup_fields"
        android:layout_marginTop="25dp"
        android:background="@drawable/roundbtn"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <ProgressBar
        android:id="@+id/registration_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>