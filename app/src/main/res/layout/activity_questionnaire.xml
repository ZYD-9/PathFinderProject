<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/questionnaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. WRITTEN COMMUNICATION: The ability to write clearly and concisely and convey information to different readers."
            android:textSize="12dp"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/black"/>

        <SeekBar
            android:id="@+id/seekbarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:max="4"
            android:progressBackgroundTint="@color/black"
            android:progressTint="@color/payo_secondary"
            android:thumbTint="@color/payo_secondary"
            android:tickMark="@color/black"
            style="@style/Widget.AppCompat.SeekBar.Discrete"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="12dp"
                android:layout_marginLeft="92dp"
                android:textStyle="bold"
                android:fontFamily="@font/arial_regular"
                android:textColor="@color/payo_secondary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="12dp"
                android:layout_marginLeft="73dp"
                android:textStyle="bold"
                android:fontFamily="@font/arial_regular"
                android:textColor="@color/payo_secondary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="12dp"
                android:layout_marginLeft="73dp"
                android:textStyle="bold"
                android:fontFamily="@font/arial_regular"
                android:textColor="@color/payo_secondary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="12dp"
                android:layout_marginLeft="72dp"
                android:textStyle="bold"
                android:fontFamily="@font/arial_regular"
                android:textColor="@color/payo_secondary"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>